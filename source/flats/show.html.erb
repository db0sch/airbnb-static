<!-- source/flats/show.html.erb -->

<!-- Read from data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->
<div class="banner-flat" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path flat.picture %>);">
</div>

<div class="wrapper padded">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <%= image_tag flat.owner.avatar, class: "img-circle avatar-large" %>
        <p><%= flat.owner.firstname %> <%= flat.owner.lastname %></p>
        <h1><%= flat.description %></h1>
        <p><%= flat.city %>, <%= flat.country %></p>
      </div>
      <div class="col-xs-12 col-sm-6">
        <!-- form booking -->
        <div class="form-card">
          <form action="#">
            <div class="row">
              <div class="col-xs-6">
                <input type="text" class="form-control input-lg" placeholder="checkin">
              </div>
              <div class="col-xs-6">
                <input type="text" class="form-control input-lg" placeholder="checkout">
              </div>
            </div>
            <div class="row">
              <div class="col-xs-12">
                <select name="" id="" class="form-control input-lg">
                  <option value="1">1 person</option>
                  <option value="2">2 persons</option>
                  <option value="3">3 persons</option>
                </select>
            </div>
            <div class="row">
              <div class="col-xs-12">
                <input type="submit" class="btn btn-primary btn-lg" value="Search">
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="wrapper-green">
  <h3>About this flat</h3>
  <p>some description text... Ã  faire avec interpolation</p>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-2">The space</div>
      <div class="col-xs-12 col-sm-4">
        <ul class"list-unstyled">
          <li>Number of bed: <strong><%= flat.bed %></strong></li>
          <li>Size of the flat: <strong><%= flat.area %></strong> m2</li>
          <li>Accomodate: <strong><%= flat.accomodate %></strong></li>
        </ul>
      </div>
      <div class="col-xs-12 col-sm-4">
        <ul class="list-unstyled">
          <% if flat.tv %>
            <li><i class="fa fa-tv"></i> TV</li>
          <% end %>
          <% if flat.wifi %>
            <li><i class="fa fa-wifi"></i> Wifi</li>
          <% end %>
       </ul>
      </div>
    </div>
  </div>
</div>

